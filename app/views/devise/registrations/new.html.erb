<%= render "shared/header" %>


<body class="sign-up">

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%# <%= devise_error_messages! %>
    
    <%# エラー発生時にメッセージを表示 %>
    <%= render 'shared/error_messages', model: f.object %>
    <%# //エラー発生時にメッセージを表示 %>

    <div class="signup">
      <h2>会員情報入力</h2>

      <div class="nickname"><b>ニックネーム<span class="indispensable">必須</span></b>
        <%= f.text_field :nickname, class:"form", id:"nickname", placeholder:"例) cook太郎", maxlength:"40", autofocus: true %>
      </div>

      <div class="email">
        <b>メールアドレス<span class="indispensable">必須</span></b>
        <%= f.email_field :email, class:"form", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="password">
        <b>パスワード<span class="indispensable">必須</span></b>
        <p>(※英字と数字の両方を含めて設定してください)</p>
        <%= f.password_field :password,  class:"form", id:"password", placeholder:"6文字以上の半角英数字", autocomplete: "new-password" %>
      </div>

      <div class="password_confirmation">
        <b>パスワード(確認)<span class="indispensable">必須</span></b>
        <%= f.password_field :password_confirmation,  class:"form", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい", autocomplete: "new-password" %>
      </div>
    </div>

    <div class="btn">
      <%= f.submit "会員登録", class:"signup-btn" %>
    </div>

  <% end %>

</body>


<%= render "shared/footer" %>
